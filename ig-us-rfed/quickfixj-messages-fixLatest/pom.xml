    <artifactId>quickfixj-messages-fixlatest</artifactId>
    <packaging>jar</packaging>

    <name>QuickFIX/J Message classes for FIX Latest</name>
    <description>QuickFIX/J Message classes for FIX Latest</description>
    <url>http://www.quickfixj.org</url>
    
	<properties>
	</properties>

    <dependencies>
        <dependency>
            <groupId>org.quickfixj</groupId>
            <artifactId>quickfixj-core</artifactId>
        </dependency>
		<dependency>
			<groupId>com.ig.orchestrations.us.rfed</groupId>
			<artifactId>orchestration</artifactId>
			<classifier>repository</classifier>
			<version>${project.version}</version>
			<type>zip</type>		
		</dependency>        
		<dependency>
			<groupId>com.ig.orchestrations.us.rfed</groupId>
			<artifactId>quickfix-dictionary</artifactId>
			<version>${project.version}</version>
			<type>zip</type>		
		</dependency>
		<!-- not required for Java 8 -->
        <dependency>
             <groupId>jakarta.xml.bind</groupId>
             <artifactId>jakarta.xml.bind-api</artifactId> 
        </dependency>
        <dependency>
             <groupId>com.sun.xml.bind</groupId>
             <artifactId>jaxb-impl</artifactId>
