         <dependency>
            <groupId>com.sun.xml.bind</groupId>
            <artifactId>jaxb-core</artifactId>
            <optional>true</optional>
        </dependency>
    </dependencies>

    <build>
        <resources>
            <resource>
                 <directory>${project.build.directory}/dependency/dictionary</directory>
            </resource>
        </resources>
